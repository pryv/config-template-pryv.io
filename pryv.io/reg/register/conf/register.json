{
  "dns": {
     "domain": "${DOMAIN}"
   },
  "auth": {
    "authorizedKeys": {
      "${ADMIN_KEY_N}": { "roles": ["admin"] }, // can contain identifier such as "perki|KEY"
      "${REGISTER_SECRET}": { "roles": ["system"] } // key used by reg to make calls on /system
    }
  },
  "redis": {
    "host": "redis",
    "port": 6379
  },
  "airbrake": {
    "disable": true
  },
  "http": {
    "static": {
      "url": "https://sw.${DOMAIN}",
      "access": "https://sw.${DOMAIN}/access/SDK-VERSION-NUM/access.html"
    },
    "register": {
      "url": "https://reg.${DOMAIN}"
    }
  },
  "server": {
    "ssl": false,
    "port": 9000
  },
  "net": {
    "aaservers": {
      "${CORE_N_NAME}": [
        {
          "base_url": "${CORE_N_URL}", // in this form: "http[s]://hostname/"
          "authorization": "${CORE_N_AUTH_KEY}"
        }
      ]
    },
    "aahostings": {
      "regions": {
        "${REGION_N}": {
          "name": "${REGION_N_DISPLAYED_NAME}",
            "localizedName": { "${LANGUAGE_N}": "${REGION_N_NAME_DISPLAYED_LANGUAGE_N}" },
          "zones": {
            "${ZONE_N}": {
              "name": "${ZONE_N_DISPLAYED_NAME}", "localizedName": { "${LANGUAGE_N}": "${ZONE_N_DISPLAYED_NAME_LANGUAGE_N}" },
              "hostings": {
                "${CORE_N_NAME}": {
                  "url": "${CORE_N_DISPLAYED_URL}", // displayed by registration page when core is selected
                  "name": "${CORE_N_DISPLAYED_NAME}", // currently not used
                  "description": "${CORE_N_DISPLAYED_DESCRIPTION", // displayed next to url when core is selected
                  "localizedDescription": { } 
                }
              }
            }
          }
        }
      }
    }
  },
  "airbrake": {
    "disable": true
  },
  "appList": {
    "test-a": {
      "displayName": "Test app A",
      "description": "Test app A description",
      "iconURL": "http://placehold.it/150&text=A",
      "appURL": "https://pryv.com",
      "settingsPageURL": "https://api.pryv.com"
    },
    "test-b": {
      "displayName": "Test app B",
      "description": "Test app B description",
      "iconURL": "http://placehold.it/150&text=B",
      "appURL": "https://pryv.com",
      "settingsPageURL": "https://api.pryv.com"
    }
  }
}
