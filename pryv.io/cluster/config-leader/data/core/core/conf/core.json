{
  "env": "production",
  "http": {
    "ip": "0.0.0.0",
    "port": "9000"
  },
  "database": {
    "host": "mongodb",
    "port": 27017,
    "name": "pryv-node"
  },
  "eventFiles": {
    "attachmentsDirPath": "/app/data/attachments",
    "previewsDirPath": "/app/data/previews"
  },
  "eventTypes": {
    "sourceURL": "https://api.pryv.com/event-types/flat.json"
  },
  "auth": {
    "trustedApps": "*@https://*.rec.la*, *@https://*.DOMAIN*, *@https://pryv.github.io*",
    "sessionMaxAge": 1209600000,
    "ssoCookieDomain": ".DOMAIN",
    "ssoCookieSignSecret": "SSO_COOKIE_SIGN_SECRET",
    "filesReadTokenSecret": "FILES_READ_TOKEN_SECRET",
    "passwordResetRequestMaxAge": 3600000,
    "passwordResetPageURL": "https://sw.DOMAIN/access/reset-password.html",
    "adminAccessKey": "CORE_SYSTEM_KEY"
  },
  "services": {
    "register": {
      "url": "https://reg.DOMAIN",
      "key": "REGISTER_SYSTEM_KEY_1"
    },
    "email": {
      "enabled": {
        "welcome": true,
        "resetPassword": true
      },
      "method": "microservice",
      "url": "https://mail.DOMAIN/sendmail/",
      "key": "CORE_MAIL_KEY",
      "welcomeTemplate": "welcome-email",
      "resetPasswordTemplate": "reset-password"
    }
  },
  "updates": {
    "ignoreProtectedFields": true
  },
  "audit": {
    "forceKeepHistory": true,
    "deletionMode": "keep-authors"
  },
  "webhooks": {
    "minIntervalMs": 5000,
    "maxRetries": 5,
    "runsSize": 20
  },
  "logs": {
    "console": {
      "active": true,
      "level": "info",
      "colorize": true
    },
    "airbrake": {
      "active": false,
      "key": "88ec825519c81c3a248a5d19284970a0",
      "projectId": "95887"
    }
  }
}