 #!/usr/bin/env bash

set -e

echo "Ensuring data and log folders permissions for reg-slave..."

echo "reg-slave/register"

chown -R 9999:9999 ./reg-slave/register/log

echo "reg-slave/dns"

chown -R 9999:9999 ./reg-slave/dns/log

echo "reg-slave/redis"

chown -R 9999:9999 ./reg-slave/redis/data
chown -R 9999:9999 ./reg-slave/redis/log

echo "reg-slave/nginx"

chown -R 9999:9999 ./reg-slave/nginx/log

echo "Done!"
