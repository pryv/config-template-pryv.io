 #!/usr/bin/env bash

set -e

echo "Ensuring data and log folders permissions for core..."

echo "core"

chown -R 9999:9999 ./pryv/core/data
chown -R 9999:9999 ./pryv/core/log

echo "hfs"

chown -R 9999:9999 ./pryv/hfs/data
chown -R 9999:9999 ./pryv/hfs/log

echo "preview"

chown -R 9999:9999 ./pryv/preview/log

echo "mongodb"

chown -R 999:999 ./pryv/mongodb/data
chown -R 999:999 ./pryv/mongodb/log

echo "audit"
chmod -R 755 /var/log/pryv/audit/

echo "Done!"
