 #!/usr/bin/env bash

set -e

echo "Ensuring data and log folders permissions for core..."

echo "core/core"

chown -R 9999:9999 ./core/core/data
chown -R 9999:9999 ./core/core/log

echo "core/hfs"

chown -R 9999:9999 ./core/hfs/data
chown -R 9999:9999 ./core/hfs/log

echo "core/preview"

chown -R 9999:9999 ./core/preview/log

echo "Done!"
