#!/usr/bin/env bash

set -e

domain=$1

function build_role() {
  role=$1

  COPYFILE_DISABLE=1 tar vzcf "tarballs/$domain-$role.tgz" \
    --exclude .DS_Store \
    config-follower run-config-follower stop-config-follower \
    config-leader run-config-leader stop-config-leader \
    pryv run-pryv stop-pryv \
    ensure-permissions \
    delete-user.md \
    README.md \
    INSTALL.md
}

build_role "singlenode"